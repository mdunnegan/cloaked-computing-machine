<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <!--It will say that first_name or last_name can't be blank, when the user HAS input something for the fields-->

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>  
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div><%= f.button :submit, "Create my account!" %></div>
<% end %>

<%= render "devise/shared/links" %>
